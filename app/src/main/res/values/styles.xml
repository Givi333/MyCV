<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="android:colorBackground">@color/color_white</item>
        <item name="android:colorForeground">@color/color_white</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/color_primary</item>
    </style>

        <style name="TextHead" parent="TextAppearance.AppCompat">
            <item name="android:textSize">24sp</item>
            <item name="android:textColor">@color/color_text</item>
            <item name="android:textStyle">bold</item>
        </style>

    <style name="TextSubHead" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBaseBold" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextBaseRegular" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textStyle">normal</item>
    </style>


</resources>